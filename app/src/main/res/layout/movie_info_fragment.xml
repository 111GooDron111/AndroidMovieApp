<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dmabram15.androidmovieapp.view.MovieInfoFragment">

    <ImageView
        android:id="@+id/bannerInfoImView"
        android:layout_width="@dimen/banner_width"
        android:layout_height="@dimen/banner_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />

    <TextView
        android:id="@+id/titleMovieInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toEndOf="@+id/bannerInfoImView"
        app:layout_constraintTop_toTopOf="@+id/bannerInfoImView"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Hello" />

    <TextView
        android:id="@+id/descriptionInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bannerInfoImView"
        app:layout_constraintTop_toBottomOf="@+id/bannerInfoImView"
        app:layout_constraintVertical_bias="0.050000012"
        tools:text="description" />

</androidx.constraintlayout.widget.ConstraintLayout>