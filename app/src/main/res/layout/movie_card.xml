<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/movieItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_movie_card"
    android:layout_marginEnd="@dimen/primary_padding"
    android:padding="@dimen/primary_padding">

    <ImageView
        android:id="@+id/movieBannerImView"
        android:layout_width="@dimen/banner_width"
        android:layout_height="@dimen/banner_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movieTitleTextView"
        android:layout_width="@dimen/banner_width"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/primary_padding"
        android:paddingEnd="@dimen/primary_padding"
        android:lines="2"
        android:textColor="@color/grey_line_delimiter"
        android:gravity="center"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@+id/movieBannerImView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieBannerImView"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Some Title"/>

</androidx.constraintlayout.widget.ConstraintLayout>